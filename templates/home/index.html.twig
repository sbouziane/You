{% extends 'base.html.twig' %}
{% block meta_tags %}
    <meta name="keywords" content="{{ site_config.site_tags|join(', ') }}">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="list-group">
                <a class="list-group-item active homeHeader my-list">
                    <h2 class="list-group-item-heading text-center">{{ site_config.list_group_header }}</h2>
                    <h5 class="text-center">{{ site_config.list_group_desc }}</h5>
                </a>
                {% if searches is defined and searches is not empty %}
                    {% for search in searches %}
                        {% set text = search.searchText|clean %}
                        <a href="{{ path('search_page',{'query': text|replace({' ': '-'})}) }}"
                           class="list-group-item searchElements my-list" title="{{ text }}">
                            <i class="fa fa-music musicIcone"></i>
                            {{ text }}</a>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="seeAll text-center">
                <a href="{{ path('newSearches') }}"
                   title="{{ site_config.new_search_title }}">{{ site_config.see_all_title }}</a>
            </div>
        </div>
    </div>
{% endblock %}